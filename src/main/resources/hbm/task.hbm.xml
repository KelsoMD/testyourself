<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="by.nesterenok.testyourself.domain.Task" table="group_task">
		<id name="id" type="int">
			<column name="id" />
			<generator class="increment" />
		</id>

		<property name="finishTo" type="date">
			<column name="finish_to" />
		</property>
		<many-to-one name="group" class="by.nesterenok.testyourself.domain.Group" column="party" lazy="false"/>
		<many-to-one name="test" class="by.nesterenok.testyourself.domain.Test" column="test" lazy="proxy"/>

	</class>

</hibernate-mapping>