<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="by.nesterenok.testyourself.domain.User" table="users">
		<id name="id" type="int">
			<column name="id" />
			<generator class="increment" />
		</id>

		<property name="login" type="java.lang.String">
			<column name="login" />
		</property>

		<property name="name" type="java.lang.String">
			<column name="name" />
		</property>
		
		<property name="surname" type="java.lang.String">
			<column name="surname" />
		</property>

		<property name="email" type="java.lang.String">
			<column name="e_mail" />
		</property>

		<property name="role" type="java.lang.String">
			<column name="role" />
		</property>

		<property name="theme" type="java.lang.String">
			<column name="theme" />
		</property>
		
		<set name="group" table="user_groups" cascade="all" lazy="true" fetch="join">
			<key column="user_id"/>
			<many-to-many column="group_id" class="by.nesterenok.testyourself.domain.Group" />
		</set>

	</class>

</hibernate-mapping>